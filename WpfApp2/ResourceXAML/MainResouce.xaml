<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                   xmlns:viewmodel="clr-namespace:WpfApp2.ViewModel"   
                   xmlns:local="clr-namespace:WpfApp2.Converters">
    <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <local:ViolationListToStringConverter x:Key="ViolationListToStringConverter"/>
    <local:BoolToPaidStatusConverter x:Key="BoolToPaidStatusConverter"/>
    <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    <local:MessageTypeToBrushConverter x:Key="MessageTypeToBrushConverter"/>
    <!--Style DataGridHeader-->     
       <Style TargetType="DataGridColumnHeader" x:Key="DataGridHeaderStyle">  
           <Setter Property="HorizontalContentAlignment" Value="Center"/>  
           <Setter Property="FontWeight" Value="SemiBold"/>  
           <Setter Property="FontSize" Value="16"/>  
           <Setter Property="Padding" Value="10,5"/>  
           <Setter Property="Background" Value="#FFD3D3D3"/>  
           <Setter Property="Foreground" Value="Black"/>  
       </Style>  
</ResourceDictionary>